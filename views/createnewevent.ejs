<div class="container col-md-4 col-md-offset-4">
<% user %>
  <h3>Create new event</h3>
  <form action="/auth/profile/events/create-event" method="POST">
    <div class="form-group">
      <label for="startDate">Event Date</label>
      <input type= "date" name="startDate" id="dateInput">
    </div>
    <div class="form-group">
      <label for="eventName">Event Name</label>
      <input type="text" name="eventName" value="">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <input type="text" name="description" value="">
    </div>
    <div class="form-group">
      <label for="location">Location</label>
      <input type="text" name="location" value="">
    </div>
    <div class="form-group">
      <label for="typeOfEvent">Type of Event</label>
      <input type="text" name="typeOfEvent" value="" placeholder = 'Paid gig'>
    </div>
    <div class="form-group">
      <label for="numberOfSpots">Number of Available Spots</label>
      <input type="number" name="numberOfSpots" value="">
    </div>
    <div class="form-group">
      <label for="status">Status</label>
      <input type="text" name="status" value="" placeholder='Proposed/Confirmed'>
    </div>
    <button type="submit" class='btn btn-default '>Submit</button>
  </form>
</div>
